#include<iostream>
using namespace std;
int main() {
int number,a,b,sum;
cout<<" 1. Addition"<<endl<<" 2. Subtraction"<<endl<<" 3. Multiplication"<<endl<<" 4. division"<<endl<<" 5. modulous"<<endl;
cout<<"Enter number of operation: ";
cin>>number;
system("CLS");
switch(number) {
	case 1:
	cout<<"Add"<<endl;
	cout<<"enter two no.'s to add: ";
	cin>>a>>b;
	sum=a+b;
	cout<<a<<" + "<<b<<" = "<<sum;
	break;
	case 2:
	cout<<"Subtract"<<endl;
	cout<<"enter two no.'s to subtract: ";
	cin>>a>>b;
	sum=a-b;
	cout<<a<<" - "<<b<<" = "<<sum;
	break;
	case 3:
	cout<<"Multiply"<<endl;
	cout<<"enter two no.'s to multiply: ";
	cin>>a>>b;
	sum=a*b;
	cout<<a<<" * "<<b<<" = "<<sum;
	break;
	case 4:
	cout<<"Divide"<<endl;
	cout<<"enter two no.'s to divide: ";
	cin>>a>>b;
	sum=a/b;
	cout<<a<<" / "<<b<<" = "<<sum;
	break;
	case 5:
	cout<<"Modulous"<<endl;
	cout<<"enter two no.'s to modolous: ";
	cin>>a>>b;
	sum=a%b;
	cout<<a<<" % "<<b<<" = "<<sum;
	break;
	default:
	cout<<"Invalid entry"<<endl;
	break;
	}	
	return 0;	
}

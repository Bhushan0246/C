#include<iostream>
using namespace std;

int main() {
int n,tries=1;
cout<<"Hello Friend!"<<endl"This is the time to have some fun"<<endl;
cout<<"I have a Lucky Number between 0-10 guess it: "<<endl;
cin>>n;
while(n!=7 && tries<=3) {
	system("CLS");
	cout<<"OH! Wrong guess..."<<endl<<"Tries: "<<tries<<endl<<"Try again"<<endl;
	tries++;
	cout<<"I have a Lucky Number guess it: "<<endl;
	cin>>n;
}
if(n==7) {
	cout<<"Yeah! Right guess."<<endl<<"Congratulations";
}
else if(tries<=3) {
	cout<<"OH! You reached Tries limit: "<<tries<<endl;
}
return 0;
}

